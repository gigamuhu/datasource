    transform: translateY(-50%);
}
.form-floating .form-control {
    height: 3rem;
    min-height: 3rem;
    font-size: .9rem;
}

/* Focus olduğunda etiket yukarı kayar */
.form-floating input:focus,
.form-floating select:focus {
    padding-top: .75rem; /* Etiket yukarı kayarken input alanı küçülmeli */
}

/* Etiket yukarı kayması */
.form-floating input:not(:placeholder-shown) + label,
.form-floating select:not(:placeholder-shown) + label,
.form-floating input:focus + label,
.form-floating select:focus + label {
    top: 0;
    transform: translateY(-100%); /* Etiket yukarı kayar */
    font-size: 0.875rem; /* Etiket küçük olmalı */
    color: #495057; /* Etiket rengi */
}

/* Disabled input ve select alanları */
.form-floating input:disabled,
.form-floating select:disabled {
    background-color: #f8f9fa;
}

