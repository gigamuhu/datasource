.form-floating label {
    opacity:0.7;
    position: absolute;
    padding:0.75rem .75rem;
    top: 50%;
    left: 0;
    right: 0;
    z-index: 2;
    pointer-events: none; /* Etiket sadece görsel amaçlı, inputa tıklanabilir olmalı */
